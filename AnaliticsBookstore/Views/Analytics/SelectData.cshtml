                });
                list.Add(new SelectListItem
                {
                    Text = "bavi.pl",
                    Value = "65576965"
                });
                list.Add(new SelectListItem
                {
                    Text = "octagon",
                    Value = "56721514"
                });
                list.Add(new SelectListItem
                {
                    Text = "salesberry",
                    Value = "47742641"
                });
                list.Add(new SelectListItem
                {
                    Text = "ThePolishBookstore with domain",
                    Value = "43738233"
                });
                list.Add(new SelectListItem
                {
                    Text = "ThePolishBookstore.com",
