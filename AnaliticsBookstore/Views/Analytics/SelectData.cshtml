        <td>
            @Html.LabelFor(model => model.UrlLike)
        </td>
        <td>
            @Html.EditorFor(model => model.UrlLike)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(model => model.StartDate)
        </td>
        <td>
            @*@Html.EditorFor(model => model.StartDate)*@
            @Html.TextBox("StartDate", Model.StartDate.ToShortDateString())
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(model => model.EndDate)
        </td>
        <td>
            @*@Html.EditorFor(model => model.EndDate)*@
            @Html.TextBox("EndDate", Model.StartDate.ToShortDateString())
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(model => model.MinPageViews)
        </td>
        <td>
            @Html.EditorFor(model => model.MinPageViews)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(model => model.MaxBounceRate)
        </td>
        <td>
            @Html.EditorFor(model => model.MaxBounceRate)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(model => model.Output)
        </td>
        <td>
            @Html.DropDownListFor(model => model.Output, (List<SelectListItem>)ViewBag.AvailableOutput)
        </td>
    </tr>
</table>
    <input type="submit" value="Submit" />
}