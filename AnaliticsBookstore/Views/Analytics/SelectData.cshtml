@model MvcApplication1.Models.GoogleKeywordFilter
@{
    ViewBag.Title = "SelectData";
}

@section AdditionalScripts
{
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")">
	</script>
	<script src="@Url.Content("~/Scripts/jquery.ui.datepicker-pl.js")">
	</script>
    <script type="text/javascript">

        $(document).ready(function () {
            $("#StartDate").datepicker();
            $("#EndDate").datepicker();
        });
    </script>
}
@if (ViewBag.IsToken == null && ViewBag.IsCode == null)
{
    <div>
        <span>You have no access data, please <a href="@Url.Action("Index")">authorize</a>.</span>
    </div>
}
<h2>SelectData</h2>
@using (Html.BeginForm("GetData", "Analytics", FormMethod.Get))
{
<table>
